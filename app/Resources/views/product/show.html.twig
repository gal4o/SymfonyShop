{% extends 'base.html.twig' %}

{% block body %}
<div class="container body-content" >
    <h1>Product</h1>

    <table border="solid-black">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ product.quantity }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('images_directory/' ~ product.image) }}"></td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cart_add', {'id': product.id}) }}" class="btn btn-success">Buy</a>
        </li>
        <li>
            <a href="{{ path('homepage') }}" class="btn btn-primary">Back to the products list</a>
        </li>
    </ul>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
<div class="container body-content" >
    <h1>Cart</h1>

    <table border="solid-black">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cart.id }}</td>
            </tr>
            <tr>
                <th>Products</th>
                <td>{% if cart.products %}
                        {% for product in cart.products %}
                            <div>
                                <p>{{ product.getName() }}
                                {{ product.getPrice }}
                                </p>
                            </div>
                        {% endfor %}
                    {% endif %}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ cart.total }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ cart.delivery.phone }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ cart.delivery.address }}</td>
            </tr>
            <tr>
                <th>Payment</th>
                <td>{{ cart.delivery.payment }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('cart_index') }}" class="btn btn-primary">Back to the carts list</a>


</div>
{% endblock %}

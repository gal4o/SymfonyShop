{% extends 'base.html.twig' %}

{% block body %}
<div class="container body-content" >
    <h1>Carts list</h1>

    <table border="solid-black">
        <thead>
            <tr>
                <th>Id</th>
                <th>User</th>
                <th>Total</th>
                <th>Actions</th>
                <th>Verify</th>
            </tr>
        </thead>
        <tbody>

{% for cart in carts %}
            <tr>
                <td><a href="{{ path('cart_show_one', { 'id': cart.id }) }}">{{ cart.id }}</a></td>
                <td>{{ cart.total }}</td>
                <td>{{ cart.user.fullName }}</td>
                <td>
                    <a href="{{ path('cart_show_one', { 'id': cart.id }) }}" class="btn btn-primary">show</a>
                </td>
                <td>{{ cart.isVerify }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
    <h1>Carts list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>User</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cart in carts %}
            <tr>
                <td><a href="{{ path('cart_show', { 'id': cart.id }) }}">{{ cart.id }}</a></td>
                <td>{{ cart.total }}</td>
                <td>{{ cart.user.fullName }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('cart_show', { 'id': cart.id }) }}">show</a>
                        </li>
                        {#<li>#}
                            {#<a href="{{ path('cart_edit', { 'id': cart.id }) }}">edit</a>#}
                        {#</li>#}
                    </ul>
                </td>
                <td>{{ cart.isVerify }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
<div class="container body-content" >
    <h1>Product</h1>

    <table border="solid-black">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ product.quantity }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}$</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('images_directory/' ~ product.image) }}"></td>
            </tr>
        </tbody>
    </table>

            <a href="{{ path('products_list') }}" class="btn btn-primary">Back to the products list</a>
            <a href="{{ path('admin_product_edit', { 'id': product.id }) }}" class="btn btn-warning">Edit</a>

</div>
{% endblock %}

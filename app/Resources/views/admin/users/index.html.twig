{% extends 'base.html.twig' %}

{% block body %}
<div class="container body-content" >
    <h1>Users list</h1>

    <table border="solid-black">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Full Name</th>
                <th>Carts</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('admin_user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.email }}</td>
                <td>{{ user.fullName }}</td>
                <td>{{ user.carts.count }}</td>
                <td>
                            <a href="{{ path('admin_user_show', { 'id': user.id }) }}" class="btn-sm btn-primary">show</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
